{
  "name": "theidbrewing.github.io",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "init:skin": "node convert_to_scss.js",
    "lint-css": "wp-scripts lint-style './src/**/*.scss'",
    "lint-css:fix": "npm run lint-css -- --fix",
    "sass": "npx sass --no-source-map ./src/skins",
    "postcss:skin01": "npx postcss ./src/skins/theidbrewing/scss/style.css --use autoprefixer postcss-inline-svg -r --no-map & npx postcss ./src/skins/theidbrewing/scss/editor-style.css --use autoprefixer postcss-inline-svg -r --no-map",
    "mv:skin01": "mv ./src/skins/theidbrewing/scss/style.css ./build/skins/theidbrewing & mv ./src/skins/theidbrewing/scss/editor-style.css ./build/skins/theidbrewing",
    "build:css": "run-s sass postcss:* mv:*",
    "imageminsvgo": "node src/images/imagemin-svgo.js",
    "check-licenses": "wp-scripts check-licenses",
    "list:skin": "ls -1 ./src/skins/",
    "count:skin": "skins_count=(`ls -1 ./src/skins`) && echo ${#skins_count[@]}",
    "build:skin": "npx sass --no-source-map ./src/skins/$npm_config_skin && mkdir -p ./build/skins/$npm_config_skin && mv ./src/skins/$npm_config_skin/scss/style.css ./build/skins/$npm_config_skin",
    "dist:theidbrewing": "sh bin/dist.sh theidbrewing"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theidbrewing/theidbrewing.github.io.git"
  },
  "author": "theidbrewing",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/theidbrewing/theidbrewing.github.io/issues"
  },
  "devDependencies": {
    "@ixkaito/imagemin": "^0.1.0",
    "@wordpress/scripts": "^18.0.0",
    "ejs": "^3.1.6",
    "imagemin": "^8.0.1",
    "imagemin-svgo": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-inline-svg": "^5.0.0"
  }
}
