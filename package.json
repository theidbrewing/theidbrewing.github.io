{
  "name": "theidbrewing.github.io",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "init:skin": "node convert_to_scss.js",
    "lint-css": "wp-scripts lint-style './src/**/*.scss'",
    "lint-css:fix": "npm run lint-css -- --fix",
    "sass": "exsc sass",
    "postcss:skin01": "npx postcss ./src/skins/theidbrewing/scss/style.css --use autoprefixer postcss-inline-svg -r --no-map & npx postcss ./src/skins/theidbrewing/scss/editor-style.css --use autoprefixer postcss-inline-svg -r --no-map",
    "postcss": "npx postcss ./src/skins/**/scss/[^_]*.css --use autoprefixer postcss-inline-svg -r --no-map",
    "mv:skin01": "mv ./src/skins/theidbrewing/scss/style.css ./build/skins/theidbrewing & mv ./src/skins/theidbrewing/scss/editor-style.css ./build/skins/theidbrewing",
    "mv": "exsc mv",
    "build:skin01": "run-s sass postcss:skin01 mv:skin01",
    "build:css": "run-s sass postcss:* mv:*",
    "imageminsvgo": "node src/images/imagemin-svgo.js",
    "check-licenses": "wp-scripts check-licenses",
    "list:skin": "ls -1 ./src/skins/",
    "count:skin": "skins_count=(`ls -1 ./src/skins`) && echo ${#skins_count[@]}",
    "build:skin": "npx sass --no-source-map ./src/skins/$npm_config_skin && mkdir -p ./build/skins/$npm_config_skin && mv ./src/skins/$npm_config_skin/scss/style.css ./build/skins/$npm_config_skin && mv ./src/skins/$npm_config_skin/scss/editor-style.css ./build/skins/$npm_config_skin/",
    "build:skins": "chmod +x bin/*.sh && sh bin/build-skins.sh",
    "dist:theidbrewing": "sh bin/dist.sh theidbrewing",
    "dist:all": "chmod +x bin/*.sh && sh bin/dist-all.sh",
    "test": "exsc test"
  },
  "exsc": {
    "sass": {
      "command": "npx sass --no-source-map ./src/skins/{skin}",
      "defaults": {
        "skin": ""
      }
    },
    "mv": {
      "command": "mv ./src/skins/{skin}/scss/style.css ./build/skins/{skin}/ & mv ./src/skins/{skin}/scss/editor-style.css ./build/skins/{skin}/",
      "defaults": {
        "skin": "theidbrewing"
      }
    },
    "test": {
      "command": "echo {skin}",
      "defaults": {
        "skin": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theidbrewing/theidbrewing.github.io.git"
  },
  "author": "theidbrewing",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/theidbrewing/theidbrewing.github.io/issues"
  },
  "devDependencies": {
    "@ixkaito/imagemin": "^0.1.0",
    "@wordpress/scripts": "^18.0.0",
    "css-select": "^4.1.3",
    "css-what": "^5.0.1",
    "ejs": "^3.1.6",
    "imagemin": "^8.0.1",
    "imagemin-svgo": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-inline-svg": "^5.0.0",
    "exsc": "gist:cc7ad5bc1a8417b57accb254f31be6a1"
  }
}
